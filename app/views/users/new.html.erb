<% provide(:title, 'Sign Up') %>
<h1><span class="logo_1">Sign</span><span class="logo_2">Up</span></h1>

<div class = "form">
  <%= form_for(@user) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>

      <br>
      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
  
  <% end %>
</div>