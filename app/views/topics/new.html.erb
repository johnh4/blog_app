<%= provide(:title,'New Topic') %>
<h1 style= "color: navy"><span class="logo_2">New</span><span class="logo_1">Topic</span></h1>

<div class = "filler">
	<div class="form">
	  <%= form_for([@forum, @topic]) do |f| %>

		  <%= f.hidden_field :forum_id %>

		  <%= f.hidden_field :user_id, value: current_user.id %>

	      <%= f.label :title %>
	      <%= f.text_field :title %>
	      
	      <br />

	      <div class="larger_input">
		      <textarea name="post[content]" cols="80" rows="20"><%= @post.content %></textarea> 
	      </div>    

	      <br>
	      <%= f.submit "Create topic", class: "btn btn-large btn-primary" %>      
      <% end %>
	</div>
</div>
