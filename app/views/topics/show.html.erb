<%= provide(:title, @topic.title) %>

<h3><%= @topic.title %></h3>
<% for post in @topic.posts %>
	<div class="post">
		<span class="left"><%= post.topic.user.name %><br />
			<%= link_to "Edit", edit_forum_topic_post_path(@topic.forum, @topic, post) %>
			<br /><%= link_to "Delete", [@topic.forum, @topic, post], confirm: 'Are you sure?', method: :delete %>
		</span>
		<span class="right"><%= post.content %></span>
	</div>
<% end %>

<p>
	<%= link_to "Reply", new_forum_topic_post_path(@topic.forum,@topic) %> |
	<%= link_to "Destroy Topic", [@topic.forum, @topic], confirm: 'Are you sure?', method: :delete %> |
	<%= link_to "View All", forum_path(@topic.forum) %>
</p>